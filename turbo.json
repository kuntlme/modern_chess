{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },

    "build:client": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_SECRET"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "build:ws_server": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL", "WS_SECRET"],
      "outputs": ["dist/**"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },

    "format": {
      "cache": false
    },

    "format:check": {
      "cache": false
    }
  }
}
